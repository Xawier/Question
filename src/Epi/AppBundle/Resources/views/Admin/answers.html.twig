{% extends 'EpiAppBundle::base_admin.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}" />
{% endblock %}

{% block body %}
         <div id="page-wrapper">

            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            Users
                            <small>List</small>
                        </h1>
                        <ol class="breadcrumb">
                            <li>
                                <i class="fa fa-dashboard"></i>  <a href="{{ url('admin') }}">Dashboard</a>
                            </li>
                            <li class="active">
                                <i class="fa fa-fw fa-check-circle"></i> Answers
                            </li>
                        </ol>
                        <table class="table table-striped ">
                          <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Answer</th>
                                        <th>Author</th>
                                        <th>Question</th>
                                        <th>Date</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for answer in answers  %}
                                        <tr>
                                            <td>{{ answer.id }}</td>
                                            <td><a href="{{ url('show_question', {'questionId' : answer.question.id}) }}" >{{ answer.value }}</a></td>
                                            <td>{{ answer.user.username }}</td>
                                            <td>{{ answer.question.id }}</td>
                                            <td>{{ answer.date|date("H:i d/m/Y") }}</td>
                                            <td>{% if answer.active == 1 %}<a class="btn btn-default btn-danger" href="{{ url('delete_answer', {'answerId' : answer.id}) }}" role="button">Delete</a>{% else %} <a class="btn btn-default btn-success" href="{{ url('restore_answer', {'answerId' : answer.id}) }}" role="button">Restore</a> {% endif %}</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>                        
                            </table>
                    </div>
                </div>
                <!-- /.row -->

            </div>
            <!-- /.container-fluid -->

        </div>

{% endblock %}
