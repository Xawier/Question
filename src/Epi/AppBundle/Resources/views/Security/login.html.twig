{% extends 'EpiAppBundle::base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}" />
{% endblock %}

{% block navbar %}{% endblock %}

{% block body %}

    <div class="container">

      <form class="form-signin" role="form" action="{{ path('login_check') }}" method="post">
        {% if error %}
            <div class="alert alert-danger" role="alert">
              <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
              <span class="sr-only">Error:</span>
              {{ error.message }}
            </div>
        {% endif %}
        <div class="input-group" id="username-group">
          <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
          <input type="text" id="username" class="form-control" placeholder="Username" name="_username" value="{{ last_username }}" required autofocus>
        </div>
        <div class="input-group" id="password-group">
          <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
          <input type="password" id="password" name="_password" class="form-control" placeholder="Password" required>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
      </form>

    </div> <!-- /container -->

{% endblock %}
